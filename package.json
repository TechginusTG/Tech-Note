{
  "name": "technote",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:db": "podman-compose up -d",
    "dev:backend": "dotenv -e .env -- bash -c \"cd backend && ./gradlew bootRun\"",
    "dev:frontend": "next dev --turbopack",
    "dev": "trap 'kill 0' SIGINT; npm run dev:db & npm run dev:backend & npm run dev:frontend",
    "stop": "echo 'Database not running via compose.'",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.9.0",
    "@tiptap/extension-image": "^3.4.4",
    "@tiptap/extension-placeholder": "^3.4.4",
    "@tiptap/extension-text-style": "^3.4.4",
    "@tiptap/react": "^3.4.4",
    "@tiptap/starter-kit": "^3.4.4",
    "i18next": "^25.5.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "next": "15.5.3",
    "next-i18next": "^15.4.2",
    "next-auth": "^4.24.7",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-i18next": "^15.7.3",
    "react-icons": "^5.5.0",
    "react-quill-new": "^3.6.0",
    "react-redux": "^9.2.0",
    "redux": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-redux": "^7.1.34",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^13.5.6",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
